<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/EventPoster"
        android:layout_width="340dp"
        android:layout_height="114dp"
        android:layout_marginStart="16dp"
        android:background="@color/navbarFragment"
        android:clickable="true"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/WhiteBar"
        android:layout_width="29dp"
        android:layout_height="115dp"
        android:layout_marginStart="-10dp"
        app:layout_constraintBottom_toBottomOf="@+id/EventPoster"
        app:layout_constraintStart_toStartOf="@+id/EventPoster"
        app:layout_constraintTop_toTopOf="@+id/EventPoster"
        app:srcCompat="@drawable/whitebar" />

    <TextView
        android:id="@+id/EventName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/Event_Name"
        android:textColor="@color/light_blue"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/EventPoster"
        app:layout_constraintEnd_toEndOf="@+id/EventPoster"
        app:layout_constraintTop_toTopOf="@+id/EventPoster" />
</androidx.constraintlayout.widget.ConstraintLayout>