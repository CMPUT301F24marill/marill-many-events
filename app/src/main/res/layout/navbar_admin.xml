<!-- res/layout/fragment_navigation_bar.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"> <!-- Change this to wrap_content -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/navbarFragment"
        app:itemIconTint="@color/light_blue"
        app:itemTextColor="@color/light_blue"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu_admin" />
</RelativeLayout>
